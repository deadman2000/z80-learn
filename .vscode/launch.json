{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Internal Simulator",
			"type": "dezog",
			"request": "launch",
			"remoteType": "zsim",
            "zsim": {
                "visualMemory": true,
                "memoryModel": "ZX128K",
                "ulaScreen": true,
                "zxBorderWidth": 20,
                "vsyncInterrupt": true,
                "zxKeyboard": true,
                "zxBeeper": true,
            },
			"rootFolder": "${workspaceFolder}",
			"disassemblerArgs": {
				"esxdosRst": true
			},
            "topOfStack": "StackTop",
            "sjasmplus": [
                {
                    "path": "test.sld"
                }
            ],
			"load": "test.sna",
			"skipInterrupt": false,
			"startAutomatically": true,
			"preLaunchTask": "sjasmplus"
		},
		{
			"name": "ZEsarUX",
			"type": "dezog",
			"request": "launch",
			"remoteType": "zrcp",
			"zrcp": {
				"hostname": "localhost",
				"port": 10000,
                "loadDelay": 1400
			},
			"rootFolder": "${workspaceFolder}",
			"disassemblerArgs": {
				"esxdosRst": true
			},
            "topOfStack": "StackTop",
            "sjasmplus": [
                {
                    "path": "test.sld"
                }
            ],
			"load": "test.sna",
			"skipInterrupt": false,
            "startAutomatically": true,
			"preLaunchTask": "sjasmplus"
		},
        {
            "type": "dezog",
            "request": "launch",
            "name": "Unit Tests - Simulator",
            "unitTests": true,
            "presentation": {
                "hidden": true
            },
            "remoteType": "zsim",
            "zsim": {
                "visualMemory": true,
                "memoryModel": "RAM"
            },
            "sjasmplus": [
                {
                    "path": "test.sld"
                }
            ],
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assertion enable",
                "-wpmem enable"
            ],
            "startAutomatically": true,
            "rootFolder": "${workspaceFolder}",
            "load": "test.sna"
        }
	]
}